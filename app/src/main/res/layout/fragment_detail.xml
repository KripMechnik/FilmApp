<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".ui.detailed.DetailFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleTextColor="@android:color/transparent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:src="@android:color/holo_blue_dark"
                    android:id="@+id/iv_poster"/>

            <com.google.android.material.appbar.MaterialToolbar
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/toolbar"
                    app:title="Название фильма"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin"/>



        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_short_desc"
                        android:textStyle="bold"
                        android:text="Краткое описание"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-smallcaps"
                />

                <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/rating_bar"
                        android:rating="3.5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:progressBackgroundTint="@android:color/background_dark"
                        android:progressTint="@android:color/holo_orange_light"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="8dp"
                />

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_genres"
                        android:text="Жанры"
                        android:textSize="20sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="sans-serif-smallcaps"
                />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/cardview_dark_background"/>

                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_description"
                        android:layout_marginTop="8dp"
                        android:text="@string/test_test"
                        android:textSize="24sp"

                        android:fontFamily="sans-serif-smallcaps"
                />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:maxImageSize="40dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            app:borderWidth="0dp"
            app:layout_anchor="@id/app_bar_layout"
            android:layout_marginEnd="30dp"
            app:layout_anchorGravity="bottom|right"
            android:id="@+id/send_button"
            app:fabSize="mini"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:src="@drawable/play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:maxImageSize="40dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        app:borderWidth="0dp"
        android:id="@+id/watch_button"
        app:layout_anchor="@id/app_bar_layout"
        android:layout_marginEnd="110dp"
        app:layout_anchorGravity="bottom|right"
        app:fabSize="mini"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>